form#doap-form.pure-form.pure-form-aligned
  .pure-g
    .pure-u-1-4
      .pure-control-group
        label(for="name") Project Name
        input#name(type="text", name="name", placeholder="Project Name", required="")
      .pure-control-group
        label(for="shortdesc") Short Description
        input#shortdesc(type="text", name="shortdesc", placeholder="Short Description", required="")
      .pure-control-group
        label(for="desc") Description
        textarea#desc(name="desc", placeholder="Description", required="")
      .pure-control-group
        label(for="vendor") Vendor
        input#vendor(type="text", name="vendor", placeholder="Vendor", value="Red Hat JBoss")
    .pure-u-1-4
      .pure-control-group
        label(for="homepage") Homepage
        input#homepage(type="url", name="homepage", placeholder="Homepage", required="")
      .pure-control-group
        label(for="license") License
        select#license(name="license", required="")
          option(value="LGPL") LGPL
          option(value="ASL") APL
          option(value="EPL") EPL
          option(value="AGPL") AGPL
          option(value="MIT") MIT
          option(value="BSD") BSD
      .pure-control-group
        label(for="language") Language
        input#language(type="text", name="language", placeholder="Language")
      .pure-control-group
        label(for="category") Category
        input#category(type="text", name="category", placeholder="Category")
    .pure-u-1-4
      .pure-control-group
        label(for="repositoryType") Repository Type
        select#repositorytype(name="repositoryType", required="")
          option(value="") Select One
          option(value="CVSRepository") CVS
          option(value="SVNRepository") SVN
          option(value="ArchRepository") Arch
          option(value="BKRepository") BitKeeper
          option(value="GitRepository") Git
          option(value="BazaarBranch") Bazar
          option(value="HgRepository") Mercurial
          option(value="DarcsRepository") Darcs
      #repoLocationGroup.pure-control-group.repository
        label(for="repoLocation") Repo URL
        input(type="url", name="repoLocation", placeholder="Repository URL")
      #repoBrowseGroup.pure-control-group
        label(for="repoBrowse") Browse URL
        input(type="url", name="repoBrowse", placeholder="Browse URL")
      #repoModuleGroup.pure-control-group.repository
        label(for="repoModule") Module
        input(type="text", name="repoModule", placeholder="Module")
      #repoAnonRoot.pure-control-group.repository
        label(for="repoAnonRoot") Anon Root
        input(type="text", name="repoAnonRoot", placeholder="Anon-Root")
    .pure-u-1-4
      .pure-control-group
        label(for="issueDB") Issue DB URL
        input#issueDB(type="url", name="issueDB", placeholder="Issue DB URL")
      .pure-control-group
        label(for="wiki") Wiki URL
        input#wiki(type="url", name="wiki", placeholder="Wiki URL")
      .pure-control-group
        label(for="mailingListURL") Mailing List URL
        input#mailingListURL(type="url", name="mailingListURL", placeholder="Mailing List URL")
      .pure-control-group
        label(for="logoURL") Logo URL
        input#logoURL(type="url", name="logoURL", placeholder="Logo URL", required="")
  h2 People
  .pure-g
    .pure-u-1-3
      .pure-control-group
        label(for="first-name") First Name (required)
        input#first-name(type="text", name="first-name", placeholder="First Name")
      .pure-control-group
        label(for="last-name") Last Name (required)
        input#last-name(type="text", name="last-name", placeholder="Last Name")
      .pure-control-group
        label(for="community-account") Community Account
        input#community-account(type="text", name="community-account", placeholder="Community Account Username")
      // TODO: roles supported: tester, documentation, lead, developer, lead is also a maintainer
      .pure-control-group
        label(for="role") Role within the project (must have at least one Lead) (required)
        select#role(name="role")
          option(value="") Select one
          option(value="lead") Lead
          option(value="documenter") Documenter
          option(value="tester") Tester
          option(value="developer") Developer
          option(value="helper") Helper
          option(value="translator") Translator
      a#addPerson.pure-button(href="#") Add Person
    .pure-u-1-3
      .pure-control-group
        label(for="people-container") People Added
        select#people-container(name="people-container", multiple="")
  fieldset#versions
    legend Versions
    a#addVersion.pure-button(href="#") Add Version
    #insert-version-container.pure-g
  fieldset#specs
    legend Specifications Implemented
    a#addSpec.pure-button(href="#") Add Spec
    #insert-spec-container.pure-g
  fieldset#accounts
    legend Online Account
    a#addOnlineAccount.pure-button(herf="#") Add Online Account
    #insert-account-container.pure-g
  button#submit-button.pure-button.pure-button-primary(type="submit") Generate DOAP
  a#download-button.pure-button.pure-button-disabled(disabled="") Download DOAP

